document.addEventListener('DOMContentLoaded', function () {
    // üçì Bot√£o principal da acessibilidade com estilo moranguinho
    const botaoMoranguinho = document.getElementById('botao-acessibilidade');
    const menuMoranguinho = document.getElementById('opcoes-acessibilidade');

    botaoMoranguinho.addEventListener('click', function () {
        botaoMoranguinho.classList.toggle('rotacao-botao'); // üçì Gira o bot√£o como uma folhinha
        menuMoranguinho.classList.toggle('apresenta-lista'); // üçì Mostra ou esconde o menu de op√ß√µes
    });

    // üçì Bot√µes para ajustar o tamanho da fonte
    const botaoAumentarMorango = document.getElementById('aumentar-fonte');
    const botaoDiminuirMorango = document.getElementById('diminuir-fonte');

    let tamanhoFonteMorango = 1;

    botaoAumentarMorango.addEventListener('click', function () {
        tamanhoFonteMorango += 0.1;
        document.body.style.fontSize = `${tamanhoFonteMorango}rem`;
        document.body.style.transition = 'font-size 0.3s ease'; // üçì Suavidade ao crescer
    });

    botaoDiminuirMorango.addEventListener('click', function () {
        tamanhoFonteMorango = Math.max(0.5, tamanhoFonteMorango - 0.1); // üçì Limite m√≠nimo para n√£o sumir
        document.body.style.fontSize = `${tamanhoFonteMorango}rem`;
        document.body.style.transition = 'font-size 0.3s ease'; // üçì Suavidade ao diminuir
    });
});
